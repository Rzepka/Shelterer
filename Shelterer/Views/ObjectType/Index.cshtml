@model Shelterer.ViewModels.ObjectTypeIndexData
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Object types";
}

<h2>Object types</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ObjectType.ObjectTypeName)
        </th>
        <th>Amount</th>
        <th></th>
    </tr>

@foreach (var item in Model.ObjectType)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ObjectTypeName)
        </td>
        <td>
            @item.Shelters.Count.ToString()
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<br />
Page @(Model.ObjectType.PageCount < Model.ObjectType.PageNumber ? 0 : Model.ObjectType.PageNumber) of @Model.ObjectType.PageCount

@Html.PagedListPager(Model.ObjectType, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter, id = "" }))

@if (Model.Shelters != null)
{
    <h3>@ViewBag.ObjectTypeName type shelters</h3>
    ViewBag.AdditionalInfo = "location";
    @Html.Partial("~/Views/Shelter/PartialIndex.cshtml", Model.Shelters)
}
