@model Shelterer.ViewModels.FieldInstantIndexData

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Table
        </th>
        <th>
            RecordId
        </th>
        <th>
            Field
        </th>
        <th>
            DataType
        </th>
        <th>
            Value
        </th>
        <th>
            Author
        </th>
        <th>
            Message
        </th>
        <th>
            StartDate
        </th>
        <th>
            EndDate
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.FieldInstants) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => Model.TableFieldIds[item.TableId].Item1)  (@item.TableId)              
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecordId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.TableFieldIds[item.TableId].Item2[item.FieldId]) (@item.TableId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.DataTypeIds.First(i => i.Value == item.DataTypeId).Key) (@item.DataTypeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Message)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>

            @Html.ActionLink("Details", "Details", new { id=item.Id }) |

        </td>
    </tr>
}

</table>
