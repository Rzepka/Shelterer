@model Shelterer.Models.Region

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Region</h4>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.ActionLink(Html.DisplayNameFor(model => model.RegionName).ToString(), "Index", "FieldInstant",
                new { table = "Region", recordId = Model.Id, field = "RegionName" },
                new { data_toggle = "modal", data_target = "#remoteModal1", title = "History" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RegionName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MountainRanges)
        </dt>
        <dd>
            @Html.Partial("~/Views/MountainRange/PartialIndex.cshtml", Model.MountainRanges)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Shelters)
        </dt>
        <dd>
            @{ViewBag.AdditionalInfo = "type";}
            @Html.Partial("~/Views/Shelter/PartialIndex.cshtml", Model.Shelters.OrderByDescending(s => s.LastUpdate).Take(10))
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<div class="modal fade" id="remoteModal1" tabindex="0" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content"></div>
    </div>
</div>