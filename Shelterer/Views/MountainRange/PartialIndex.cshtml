@model IEnumerable<Shelterer.Models.MountainRange>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MountainRangeName)
        </th>
        <th>Amount</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MountainRangeName)
        </td>
        <td>
            @item.Shelters.Count.ToString()
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "MountainRange", new { id = item.Id }, null) |
            @Html.ActionLink("Details", "Details", "MountainRange", new { id = item.Id }, null) |
            @Html.ActionLink("Delete", "Delete", "MountainRange", new { id = item.Id }, null)
        </td>
    </tr>
}

</table>
