@model Shelterer.Models.MountainRange

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MountainRange</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.MountainRangeName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MountainRangeName)
                @Html.ValidationMessageFor(model => model.MountainRangeName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RegionId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RegionId", String.Empty)
                @Html.ValidationMessageFor(model => model.RegionId)
            </div>
            <a href="/Region/Create" data-toggle="modal" data-target="#remoteModal" class="btn btn-default">Add new</a>
            <!-- Modal -->
            <div class="modal fade" id="remoteModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content"></div>
                </div>
            </div>
            <!-- /.modal -->
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
